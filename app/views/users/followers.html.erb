<div class='col-md-9'>
    <h1><%= 'Currently there are no followers for you' if @followers.blank?-%></h1>
    <div class="col-md-12 form-group">
      <%= form_tag('/user/followers', class: "form-group", role: "form") do -%>
        <div class="col-md-8">
          <%= text_field_tag 'search', params[:search], class: "form-control", placeholder: "Search follower" %>
        </div>
        <div class="col-md-4"><%= submit_tag 'Search', class: 'btn btn-default' %></div>
      <% end -%>
    </div>
    <%= render partial: 'shared/follower_list', locals: {users: @followers} %>
</div>
