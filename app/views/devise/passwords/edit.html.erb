<% title "Reset Password" %>

<div class="profile-page col-md-5 col-md-offset-3 text-center">
  <h2>Change your password</h2>

  <p>
    <%= link_to czardom_models_engine.user_facebook_omniauth_authorize_path, class: 'btn btn-primary' do %>
      <i class="fa fa-facebook"></i>
      Log In With Facebook
    <% end %>
  </p>

  <%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <% f.object.errors.each do |attr, error| %>
      <div class="alert alert-danger"><%= attr.to_s.titleize %> <%= error %></div>
    <% end %>

    <div class="text-left">
      <%= f.input :password, input_html: { autofocus: true, autocomplete: false } %>
      <%= f.input :password_confirmation, input_html: { autocomplete: false } %>
      <%= f.submit "Change my password", class: 'btn btn-primary' %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
