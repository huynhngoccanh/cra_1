<%= semantic_form_for :conversation, url: :conversations do |f| %>
  <%# hidden_field_tag :recipient_id, params[:to] %>
  <%= f.input :recipients,  :input_html => { :class => 'form-control' } %>
  <%= f.input :subject %>
  <%= f.input :body, as: :text, label: 'Message', input_html: { rows: 4 } %>

  <div class="form-actions">
    <%= f.action :submit, label: 'Send', button_html: { class: 'btn btn-primary' } %>
    <%= link_to "Cancel", :back, class: 'btn btn-link' %>
  </div>
<% end %>

