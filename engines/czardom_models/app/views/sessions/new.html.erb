<% title "Log In" %>

<div class="login-page">
  <h1>Log In</h1>
  <p class="lead">Welcome back, log into your account</p>
      
  <%= render "shared/flash_messages" %>

  <p>
    <%= link_to czardom_models_engine.user_facebook_omniauth_authorize_path , class: 'btn btn-primary facebook-login' do %>
      <i class="fa fa-facebook"></i>
      Log In With Facebook
    <% end %>
  </p>
  
  <%= form_tag czardom_models_engine.login_path, class: 'text-left' do %>

    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= email_field_tag :email, params[:email], class: 'form-control' %>
      
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= submit_tag "Log In", class: 'btn btn-primary' %>
      <%= link_to "Forgot Your Password", '/users/password/new', class: 'btn btn-link' %>
    </div>

  <% end %>
</div>

