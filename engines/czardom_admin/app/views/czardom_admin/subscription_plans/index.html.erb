<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Subscription Plans /
        <%= link_to "New Plan", new_subscription_plan_path %>
      </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Plan</th>
        <th>Subscribers</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @subscription_plans.each do |plan| %>
        <tr>
          <td>
            <%= link_to plan.name, subscription_plan_path(plan) %>
            <span class="text-muted">
              (<%= number_to_currency plan.price %> every <%= pluralize plan.interval_count, plan.interval %>)
            </span>
          </td>
          <td>#</td>
          <td>
            <%= link_to "Edit", edit_subscription_plan_path(plan) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
