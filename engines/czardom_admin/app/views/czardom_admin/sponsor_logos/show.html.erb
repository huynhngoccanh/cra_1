<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <%= link_to "Sponsors", sponsor_logos_path %> /
        <%= @sponsor_logo.name %>
        <%= link_to "Edit", edit_sponsor_logo_path(@sponsor_logo), class: 'btn btn-primary' %>

      </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
      
      <div class="row">
        <div class="col-md-4">
          <%= image_tag @sponsor_logo.image_url, class: 'img-responsive' %>    
        </div>
      </div>
      <dl>
        <dt>Content</dt>
        <dd><%= raw @sponsor_logo.content %></dd>
      </dl>
      <hr>
      <br>
      <div class="row">
        <div class="col-md-3">
          <strong>Group</strong>
        </div>
        <div class="col-md-9">
          <%= @sponsor_logo.groups.map {|g| g.name}.join(', ') %>        
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-3">
          <strong>Default status</strong>
        </div>
        <div class="col-md-9">
          <%= @sponsor_logo.default_status %>        
        </div>
      </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
