<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <%= link_to "Articles", root_articles_path %> /
        <%= @root_article.title %>
        <%= link_to "Edit", edit_root_article_path(@root_article), class: 'btn btn-primary' %>

      </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
      <h2><%#= @root_article.title %></h2>
      <p style="color: grey"><%= @root_article.slide.caption %></p>
      
      <div class="row">
        <%= image_tag @root_article.slide.image, class: 'img-responsive col-md-5' %>  
      </div>
      
      <hr class="col-md-5">
      <div class="row">
        <div class="col-md-12">
          <%= @root_article.body.html_safe %>        
        </div>
      </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
