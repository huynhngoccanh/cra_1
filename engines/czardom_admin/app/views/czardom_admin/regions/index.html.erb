<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Regions
      <%= link_to "New Region", new_region_path, class: 'btn btn-primary' %>
    </h1>

    <p class="lead">
      This is where you can define geographic areas to collect events, users, and groups.
    </p>
  </div>
</div>

<div class="table-responsive">
  <table class="table datatable">
    <thead>
      <tr>
        <th>Region</th>
        <th>Type</th>
        <% if can? :edit, Region %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @regions.each do |region| %>
        <tr>
          <td><%= link_to region.title, region_path(region) %></td>
          <td><%= region.object_type %></td>
          <% if can? :edit, region %>
            <td>
              <%= link_to "Edit", edit_region_path(region) %> |
              <%= link_to "Delete", region_path(region), method: :delete, class: 'text-danger', 'data-confirm' => 'Are you sure?' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
