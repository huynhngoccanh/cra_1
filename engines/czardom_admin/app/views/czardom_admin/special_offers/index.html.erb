<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        special_offers
        <%= link_to "New special_offer", new_special_offer_path, class: 'btn btn-primary' %>
      </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped datatable">
    <thead>
      <tr>
        <th>Content</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @special_offers.each do |special_offer| %>
        <tr>
          <td><%= special_offer.content.html_safe %></td>
          <td>
            <%= link_to "View", special_offer_path(special_offer) %>
            <% if can? :edit, special_offer %>
              | <%= link_to "Edit", edit_special_offer_path(special_offer) %>
            <% end %>
            <% if can? :delete, special_offer %>
              | <%= link_to "Delete", special_offer_path(special_offer), method: :delete, class: 'text-danger', 'data-confirm' => 'Are you sure?' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </div>
</div>
