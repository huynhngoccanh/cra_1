<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Messages</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Sender</th>
        <th>Subject</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @conversations.each do |conversation| %>
        <tr>
          <td>
            <%= link_to conversation_path(conversation) do %>
              <%= time_ago_in_words conversation.last_message.created_at %> ago
            <% end %>
          </td>
          <td>
            <%= link_to conversation.originator.full_name, user_path(conversation.originator) %>
          </td>
          <td>
            <strong><%= link_to conversation.subject, conversation_path(conversation) %></strong>
            (<%= conversation.messages.count %>)
          </td>
          <td>
            <%= link_to "View", conversation_path(conversation) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @conversations %>
